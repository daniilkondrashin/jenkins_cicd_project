#!groovy
// Check ub1 properties
properties([disableConcurrentBuilds()])

pipeline {
    agent { label 'master' }
    triggers { pollSCM('* * * * *') }
    parameters {
        gitParameter (  branch: '', 
                        branchFilter: 'origin/(.*)', 
                        defaultValue: 'master', 
                        description: '', 
                        name: 'BRANCH', 
                        quickFilterEnabled: true, 
                        selectedValue: 'TOP', 
                        sortMode: 'DESCENDING', 
                        tagFilter: '*', 
                        type: 'PT_BRANCH', 
                        useRepository: 'git@github.com:daniilkondrashin/jenkins_test1.git')
    }

    stages {
        stage('Delete workspace before build starts') {
            steps {
                echo 'Deleting workspace'
                deleteDir()
            }
        }
        stage('Env print') {
            steps {
                sh '''
                    echo $BRANCH
                '''
            }
        }
        stage('Checkout') {
            steps{
                    git branch: "${params.BRANCH}", credentialsId: 'github-daniil-web-app-cred', url: 'git@github.com:daniilkondrashin/jenkins_test1.git'      
                }
        }
        stage('build sa-logic') {
            steps {
                dir('sa-logic/sa') {
                    sh 'ls -la'
                    sh 'python3 -m pip install --default-timeout=100 -r requirements.txt'
                    sh 'pip install --default-timeout=100 -U textblob'
                    sh 'python3 -m textblob.download_corpora'
                }
            }
        }
        stage('docker build sa-logic') {
            steps {
                dir('sa-logic') {
                    sh 'ls -la'
                    sh 'docker build -f Dockerfile -t daniil3680/sentiment-analysis-logic .'
                }
            }
        }
        stage('Push docker image to DockerHub') {
            steps{
                dir('sa-logic') {
                    withDockerRegistry(credentialsId: 'dockerhub-cred-daniil', url: 'https://index.docker.io/v1/') {
                        sh '''
                            docker push daniil3680/sentiment-analysis-logic:latest
                        '''
                    }
                }
            }
        }
    }
}