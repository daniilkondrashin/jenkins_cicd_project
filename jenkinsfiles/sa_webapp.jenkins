#!groovy
// Check ub1 properties
properties([disableConcurrentBuilds()])

pipeline {
    agent { label 'ubuntu' }
    triggers { pollSCM('* * * * *') }
    parameters {
        gitParameter (  branch: '', 
                        branchFilter: 'origin/(.*)', 
                        defaultValue: 'master', 
                        description: '', 
                        name: 'BRANCH', 
                        quickFilterEnabled: true, 
                        selectedValue: 'TOP', 
                        sortMode: 'DESCENDING', 
                        tagFilter: '*', 
                        type: 'PT_BRANCH', 
                        useRepository: 'git@github.com:daniilkondrashin/jenkins_test1.git')
    }

    stages {
        stage('Delete workspace before build starts') {
            steps {
                echo 'Deleting workspace'
                deleteDir()
            }
        }
        stage('Env print') {
            steps {
                sh '''
                    echo $BRANCH
                '''
            }
        }
        stage('Checkout') {
            steps{
                    git branch: "${params.BRANCH}", credentialsId: 'github-daniil-web-app-cred', url: 'git@github.com:daniilkondrashin/jenkins_test1.git'      
                }
        }
        stage('build sa-webapp') {
            steps {
                sh "ls -la"
                dir('sa-webapp') {
                    sh 'ls -la'
                    sh 'mvn install'
                    sh 'java -jar sentiment-analysis-web-0.0.1-SNAPSHOT.jar --sa.logic.api.url=http://localhost:5000'
                }
            }
        }
        stage('docker build sa-webapp') {
            steps {
                dir('sa-webapp') {
                    sh 'ls -la'
                    sh 'docker build -f Dockerfile -t daniil3680/sentiment-analysis-web-app .'
                }
            }
        }
        stage('Push docker image to DockerHub') {
            steps{
                dir('sa-webapp') {
                    withDockerRegistry(credentialsId: 'dockerhub-cred-daniil', url: 'https://index.docker.io/v1/') {
                        sh '''
                            docker push daniil3680/sentiment-analysis-web-app:latest
                        '''
                    }
                }
            }
        }
    }
}